generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int               @id @default(autoincrement())
  name        String?
  email       String            @unique
  role        Role              @default(TRAVELER)
  createdAt   DateTime          @default(now())
  hostProfile HostVerification?
  trips       Trip[]            @relation("UserTrips")
}

model HostVerification {
  id             Int      @id @default(autoincrement())
  userId         Int      @unique
  isCompany      Boolean
  firstName      String
  lastName       String
  phone          String
  travelBrand    String
  about          String?
  website        String?
  socialLinks    String?
  registrationId String?
  verified       Boolean  @default(true)
  createdAt      DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id])
}

model Trip {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  destination String
  price       Float
  duration    Int
  description String?
  createdAt   DateTime @default(now())
  bannerImage String?
  gallery     String[]
  hostId      Int
  itinerary   Json?
  host        User     @relation("UserTrips", fields: [hostId], references: [id])
}

enum Role {
  HOST
  TRAVELER
}
